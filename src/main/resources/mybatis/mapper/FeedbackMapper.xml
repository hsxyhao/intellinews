<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fintech.intellinews.dao.FeedbackDao">
    <sql id="Base_Column_Select">
        SELECT
            id,
            title,
            url,
            thumbnail,
            is_active,
            gmt_create,
            gmt_modified
        FROM oi_msg
    </sql>

    <select id="listNotReadFeedback" resultType="FeedbackEntity" parameterType="FeedbackEntity">
        <include refid="Base_Column_Select"/>
        WHERE is_read = 0
    </select>

    <select id="countNotReadFeedback" resultType="integer">
        SELECT COUNT (id)
        FROM oi_feedback
        WHERE is_read = 0
    </select>

    <select id="listNotReadFeedbackById" resultType="list" parameterType="long">
        <include refid="Base_Column_Select"/>
        WHERE is_read = 0 AND user_id = #{userId}
    </select>

    <select id="countNotFeedbackById" resultType="integer" parameterType="long">
        SELECT COUNT (id)
        FROM oi_feedback
        WHERE is_read = 0 AND user_id = #{userId}
    </select>

    <insert id="addFeedback" parameterType="FeedbackEntity">
        INSERT INTO oi_feedback(user_id,is_read,msg,gmt_create,gmt_modified)
        VALUES (#{userId},#{isRead},#{msg},#{gmtCreate},#{gmtModified})
    </insert>
</mapper>